                        [-s, --sort _&lt;field&gt;_|-_&lt;field&gt;_] [-t, --template] [-j, --json]
prlctl list -i, --info --vmtype ct [_&lt;CT_name&gt;_] [-f, --full] [-t, --template]
                                   [-j, --json]
